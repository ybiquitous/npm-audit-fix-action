{
  "private": true,
  "name": "npm-audit-fix-action",
  "version": "3.4.1",
  "description": "A GitHub Action for `npm audit fix`",
  "author": "Masafumi Koba",
  "license": "MIT",
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "repository": "ybiquitous/npm-audit-fix-action",
  "engines": {
    "node": ">=12.20.0",
    "npm": ">=8"
  },
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "husky install && npm run build",
    "build": "ncc build lib/index.js --out dist && mv dist/index.js dist/index.cjs",
    "pretest": "npm run lint",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --testTimeout 30000",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test --coverage",
    "lint": "npm-run-all --print-label --parallel lint:*",
    "lint:js": "eslint --cache --ext=js,jsx,cjs,mjs,ts,tsx .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "lint:types:watch": "npm run lint:types -- --watch",
    "lint:styles": "npm run prettier -- --check",
    "lint:styles:fix": "npm run prettier -- --write",
    "prettier": "prettier .",
    "format": "npm-run-all --print-label --parallel lint:*:fix",
    "prerelease": "git switch main && git pull && npm ci && npm run clean && npm test && npm run clean",
    "release": "standard-version",
    "release:dry-run": "standard-version --dry-run",
    "clean": "git clean -dx --force --exclude=node_modules --exclude=.husky"
  },
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.0",
    "@actions/github": "^5.0.0",
    "hosted-git-info": "^4.0.2"
  },
  "devDependencies": {
    "@types/hosted-git-info": "^3.0.2",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@vercel/ncc": "^0.28.6",
    "eslint": "^8.6.0",
    "eslint-config-ybiquitous": "^15.0.0",
    "eslint-plugin-jest": "^26.1.1",
    "jest": "^27.4.7",
    "remark-preset-ybiquitous": "^0.1.2",
    "typescript": "^4.5.5",
    "ybiq": "^14.0.1"
  },
  "lint-staged": {
    "!(dist)/**/*.{js,jsx,mjs,ts,tsx}": "eslint --cache --fix",
    "!(dist)/**/*": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "standard-version": {
    "sign": false,
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        100
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "ybiquitous/node",
      "plugin:jest/recommended"
    ],
    "ignorePatterns": [
      "coverage",
      "dist",
      "tmp"
    ],
    "reportUnusedDisableDirectives": true,
    "rules": {
      "max-lines-per-function": "warn",
      "max-statements": [
        "warn",
        20
      ],
      "import/no-internal-modules": [
        "error",
        {
          "allow": [
            "**/utils/*",
            "**/fixtures/*"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "extends": [
          "ybiquitous/typescript"
        ],
        "parserOptions": {
          "project": "tsconfig.json"
        }
      }
    ]
  }
}
